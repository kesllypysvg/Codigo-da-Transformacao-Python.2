def calculadora():
    """
    Uma calculadora simples que lida com erros de divisão por zero.
    """
    print("--- Calculadora Simples ---")
    
    try:
        # Pede os dois números ao usuário
        num1 = float(input("Digite o primeiro número: "))
        num2 = float(input("Digite o segundo número: "))
        
        # Pede a operação
        operacao = input("Digite a operação (+, -, *, /): ")
        
        # Realiza a operação com base na escolha
        if operacao == '+':
            resultado = num1 + num2
            print(f"Resultado: {resultado}")
        elif operacao == '-':
            resultado = num1 - num2
            print(f"Resultado: {resultado}")
        elif operacao == '*':
            resultado = num1 * num2
            print(f"Resultado: {resultado}")
        elif operacao == '/':
            # Bloco try-except para a divisão
            try:
                if num2 == 0:
                    # Lança um erro específico para a divisão por zero
                    raise ZeroDivisionError("Erro: Divisão por zero não é permitida.")
                resultado = num1 / num2
                print(f"Resultado: {resultado}")
            except ZeroDivisionError as e:
                # O bloco `except` captura o erro e exibe uma mensagem amigável
                print(e)
            
        else:
            print("Operação inválida. Por favor, use +, -, * ou /.")
            
    except ValueError:
        # Este `except` captura o erro se a entrada não for um número
        print("Entrada inválida. Por favor, digite apenas números.")
    except Exception as e:
        # Este `except` genérico captura qualquer outro tipo de erro
        print(f"Ocorreu um erro inesperado: {e}")

# Executa a função da calculadora
calculadora()
